<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_itinerary_package_form" model="ir.ui.view">
        <field name="name">travel.itinerary.package.form</field>
        <field name="model">travel.itinerary</field>
        <field name="arch" type="xml">
            <form string="Itinerary Package">
                <sheet>
                    <!-- First Row -->
                    <group>
                        <group>
                            <field name="package_name"/>
                            <field name="customer_id"/>
                        </group>
                        <group>
                            <field name="leaving_from_id"/>
                            <field name="nationality_id"/>
                        </group>
                    </group>
    
                    <!-- Second Row -->
                    <group>
                        <group>
                            <field name="leaving_on"/>
                            <field name="number_of_rooms"/>
                            <field name="number_of_adults"/>
                        </group>
                        <group>
                            <field name="number_of_children"/>
                            <field name="company_id"/>
                        </group>
                    </group>
    
                    <!-- Third Row -->
                    <group>
                        <field name="is_final"/>
                        <field name="interests"/>
                        <field name="who_is_travelling"/>
                    </group>
    
                    <!-- Checkbox Fields in Columns -->
                    <group>
                        <group>
                            <field name="pregnant_women"/>
                            <field name="elderly_people"/>
                            <field name="with_walking_difficulty"/>
                        </group>
                        <group>
                            <field name="teenager"/>
                            <field name="women_only"/>
                            <field name="men_only"/>
                        </group>
                    </group>
    
                    <!-- Additional Fields in Rows -->
                    <group>
                        <field name="room_type"/>
                        <field name="star_rating"/>
                    </group>
                    <group>
                        <field name="add_transfers"/>
                        <field name="add_tours_and_travels"/>
                    </group>
    
                    <!-- Many2many Field in a Separate Row -->
                    <group>
                       
                            <field name="citynight_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="city_id" />
                                    <field name="nights" />
                                  
                                </tree>
                            </field>
                   
                    </group>
                    <footer>
                        <button name="action_save" type="object" string="Save" class="btn-primary" />
                        <button  string="Discard" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_itinerary_package_form" model="ir.actions.act_window">
        <field name="name">Itinerary Package Form</field>
        <field name="res_model">travel.itinerary</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_itinerary_package_form"/>
        <field name="target">new</field>
    </record>
    
</odoo>
